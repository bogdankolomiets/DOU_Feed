<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bogdan_kolomiets_1996.bogdan.dou_feed">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.bogdan_kolomiets_1996.bogdan.dou_feed.DouApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.bogdan_kolomiets_1996.bogdan.dou_feed.ui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider1775407109409842"
                  android:name="com.facebook.FacebookContentProvider"
                  android:exported="true"/>

    </application>

</manifest>
